@model List<Test.Application.DTOs.FileDto>

@{
    ViewData["Title"] = "Загруженные файлы";
}

<h2>Список загруженных файлов</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Файл</th>
                <th>Дата загрузки</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Name</td>
                    <td>@f.UploadDate.ToString("g")</td>
                    <td>
                        <a asp-action="Load_R" asp-route-fileId="@f.Id" class="btn btn-sm btn-info">Просмотреть</a>
                        <a asp-action="DownloadFile" asp-route-fileId="@f.Id" class="btn btn-sm btn-success">Скачать</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <form asp-action="MergeFiles" method="post">
            <button type="submit" class="btn btn-primary">Объединить все файлы</button>
        </form>
    </div>
}
else
{
    <p>Файлы отсутствуют.</p>
}

<br>
<a asp-action="Index" class="btn btn-secondary">Назад</a>
